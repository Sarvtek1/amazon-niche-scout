{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "lib": ["ES2022", "DOM"],
    "types": ["node"],

    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,

    "outDir": "lib"
  },
  "compileOnSave": true,
  "include": ["src"]
}
